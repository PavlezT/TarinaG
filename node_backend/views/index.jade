doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/login.css')
    link(rel='stylesheet', href='/stylesheets/jquery-ui.min.css')
    script(rel="text/javascript", src="/javascripts/jquery/jquery-3.2.1.min.js")
    script(rel="text/javascript", src="/javascripts/jquery/jquery-ui.min.js")
  body
    div(class="container")
      h1= title
      br
      if error == true
        div(id="error_info",class="ui-widget")
          div(class="ui-state-error ui-corner-all",style="padding: 0 .7em;")
            p= "Check your credentials. Entered password or email not matched."
              span(class="ui-icon ui-icon-alert",style="float: left; margin-right: .3em;")
      br
      form(id="login_form",action="/log_in",method="POST")
        input(name="email",type="email",placeholder="email")
        br
        input(name="password",type="password",placeholder="password")
        br
        button(type="submit",class="ui-button ui-widget ui-corner-all")="Log In"
      br
      a(href="forgot_password")="Have you forgot your password?"
